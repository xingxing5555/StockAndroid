<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RxToolBar">
        <attr name="toolbarTitle" format="string|reference" />
        <attr name="toolbarContent" format="string|reference" />
        <attr name="toolbarBackground" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="PercentageView">
        <attr name="defaultBackground" format="reference" />
        <attr name="percentBackground" format="reference"/>
        <attr name="percentValue" format="string|reference"/>
        <attr name="defaultText" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="TabIndicatorViewV2">
        <attr name="textSize" format="dimension" />
        <attr name="indicatorPadding" format="dimension" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="selectedColor" format="color" />
        <attr name="normalColor" format="color" />
        <attr name="selectedTextColor" format="color"/>
        <attr name="normalTextColor" format="color"/>
        <attr name="indicatorType" format="integer">
            <enum name="indicator" value="0" />
            <enum name="rect" value="1" />
            <enum name="roundRect" value="2" />
        </attr>
    </declare-styleable>
</resources>